
<div class="container col-md-4" class="container-fluid	" id="logincontainer">
	<div class="row">
		<div class="col-md-offset-3 col-md-12">

			<%= form_tag users_sessions_path do %>
			  <div class="form-group">
					<h2>User Log in</h2>
			    <%= text_field_tag :email, nil, class: 'form-control', id: 'exampleInputEmail1', placeholder: 'Email' %>
				</div>
			  <div class="form-group">
			    <%= password_field_tag :password, nil, class: 'form-control', id: 'exampleInputPassword1', placeholder: 'Password' %>
			  </div>

				<%= submit_tag 'Submit', id: 'submit1' %>

				<!-- facebook login path -->
				<% if current_user %>
					Welcome <%= current_user.name %> you have successfully signed in!<br>
					<%= link_to "Sign out", logout_path %>
				<% else %>
					<%= link_to "Sign in with facebook", facebook_login_path %><br>
				<% end %>


			<% end %>
			<br />
			<%= link_to 'Create User Account', new_users_path %> |
			<%= link_to 'Venue Login', venues_login_path, id: 'venuelogin' %>
		</div>
	</div>
</div>
