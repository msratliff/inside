<%= form_for([@venue,Promotion.new]) do |f| %>

	<%= f.label :day_of_week %><br>
	<%= f.select :day_of_week, ['Sunday','Monday','Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday' ], :prompt => 'Select One' %>

	<%= f.label :price %>
	<%= f.text_field :price %>


	<%= f.label :time %>
	<%= f.time_select(:time, {minute_step: 15}) %>
	
	<%= f.submit %>

<% end %>

