<div class="container col-md-4" id="venuelogincontainer">
	<div class="row">
		<div class="col-md-offset-3 col-md-12">
			<%= form_tag venues_sessions_path do %>
			  <div class="form-group">
					<h2>Venue Login</h2>
			    <%= text_field_tag :email, nil, class: 'form-control', id: 'exampleInputEmail2', placeholder: 'Email' %>
				</div>
			  <div class="form-group">
			    <%= password_field_tag :password, nil, class: 'form-control', id: 'exampleInputPassword2', placeholder: 'Password' %>
			  </div>
					<%= submit_tag 'Submit', id: "submit2" %>

			<% end %>



			<em><%= notice %></em><br>
			<% if current_user %>

				<%= link_to "Sign out", root_path %>
			<% else %>

			<% end %>
			<br />
			<%= link_to 'Create Venue Account', new_venue_path %> |
			<%= link_to 'User Login', users_login_path %>
		</div>
	</div>
</div>
